.intro3-section__inner
    display flex
    justify-content space-between

.intro3-section__inner-left-box
    display flex
    justify-content space-between
    flex-wrap wrap
    margin-right 125px
    padding-top 20px

.intro3__item
    width 245px

.intro3__item-icon
    height 30px
    display flex
    align-items center

.intro3__item-title
    font-size 18px
    font-family $font-family-MS
    color rgb(96, 96, 110)
    font-weight 700
    text-transform uppercase
    line-height 2.6
    margin-bottom 10px
    margin-top 15px

.intro3__item-marker
    font-size 14px
    color rgb(153, 153, 153)
    text-transform uppercase
    line-height 2.1
