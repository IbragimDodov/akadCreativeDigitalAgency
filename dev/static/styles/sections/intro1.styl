.main-view
    padding-top 210px

.main-view__title-block
    display flex
    justify-content center
    flex-direction column
    align-items center
    font-family $font-family-MS
    color rgb(96, 96, 110)
    font-weight 700
    text-transform uppercase

.sup-title
    font-size 18px
    line-height 2
    display inline-block
    padding-left 20px
    padding-right 20px
    background-color #7beec7

.main-view__title
    display inline-block
    font-size 48px
    
    line-height 1
    text-align center
    padding 20px 35px
    border 10px solid rgb(96, 96, 110)

.main-view__descr
    margin-top 30px
    margin-left auto
    margin-right auto
    width 545px
    text-align center

.main-view__descr-text
    line-height 1.5
    font-size 16px

.intro1-section-history
    display flex
    justify-content space-between
    align-items center
    margin-top 120px

.intro1-section-history__info
    width 550px
    padding-bottom 63px

.intro1-section-history__info-title
    margin-bottom 20px

.intro1-section-history__info-text
    font-size 16px
    color rgb(96, 96, 110)
    line-height 1.8

.intro1-section-history__info-button-wrapper
    text-align end
    margin-top 25px

.intro1-section-history__info-button
    outline none
    