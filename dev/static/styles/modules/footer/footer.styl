footer
    flex 0 0 auto

.footer__inner-top
    display flex
    justify-content space-between
    margin-top 25px
    margin-bottom 10px

    @media (max-width $grid-lg-max)
        flex-wrap wrap
        flex-direction column

.footer__inner-bottom
    margin-bottom 30px

.footer-nav__list
    display flex
    justify-content space-between

    @media (max-width $grid-sm-max)
        flex-direction column

.footer-nav__item
    padding-right 23px
    padding-left 20px
    position relative
    &:first-child
        padding-left 0
    &:last-child
        padding-right 0

    @media (max-width $grid-sm-max)
        padding-left 0

.footer-nav__item:after
    content ""
    position absolute
    top 50%
    right 0
    width 3px
    height 2px
    background-color #cdcdcd


.footer-nav__link,
.copyright
    font-size 14px
    font-family $font-family-OS
    color rgb(154, 154, 154)
    text-transform uppercase
    line-height 3.4

