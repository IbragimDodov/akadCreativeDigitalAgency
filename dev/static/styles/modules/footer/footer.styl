.footer-bottom-nav__list
    display flex
    justify-content flex-end

    @media (max-width $grid-lg-max)
        justify-content flex-start

.footer-bottom-nav__icon
    margin-left 17px
    fill rgb(154, 154, 154)
    width 15px
    height 14px
    display flex
    align-items flex-end
    &:first-child
        margin-left 0